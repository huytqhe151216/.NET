@{
    ViewBag.Title = "Quản lý nhân viên";
}
@model List<Employee>;
@using MovieTicketBooking.Models;
@using MovieTicketBooking.Logics;
<table border=1 style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Tên</th>
            <th>Số điện thoại</th>
            <th>Trạng thái</th>
            <th>Quản lý</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Employee e in Model)
        {
            <tr>
                <td>@e.EmployeeId</td>
                <td>@AccountLogic.GetAccountById(e.EmployeeId).Email</td>
                <td>@e.Name</td>
                <td>@e.Phone</td>
                <td>@(((bool)AccountLogic.GetAccountById(e.EmployeeId).IsActive)?"Active":"Inactive")</td>
                <td>
                    <a href="/Admin/Active?accountId=@e.EmployeeId">@(((bool)AccountLogic.GetAccountById(e.EmployeeId).IsActive)?"Inactive":"Active")</a>
                </td>
            </tr>
        }
    </tbody>
</table>


